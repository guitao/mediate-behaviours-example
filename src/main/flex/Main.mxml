<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600" preinitialize="onPreInit(event)" creationComplete="onCrtComplete(event)" 
			   xmlns:ui="org.justinjmoses.examples.mediate_behaviours.ui.*">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import org.justinjmoses.examples.mediate_behaviours.MyContext;
			
			private var context:MyContext;
			
			protected function onPreInit(event:FlexEvent):void
			{
				//pass in the system manager so we can listen for ADDED TO STAGE 
				//events from popups as well
				context = new MyContext(systemManager as DisplayObjectContainer);	
			}

			protected function onCrtComplete(event:FlexEvent):void
			{
				context.startup();	
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<ui:ServiceAwareComponent />
	
</s:Application>
